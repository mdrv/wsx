	"homepage": "https://github.com/mdrv/wsx",
	"bugs": {
		"url": "https://github.com/mdrv/wsx/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mdrv/wsx.git"
	},
	"license": "GPL-3.0",
	"author": "Umar Alfarouk <medrivia@gmail.com> (https://alfarouk.id)",
	"type": "module",
	"exports": {
		".": "./src/index.ts"
	},
	"files": ["dist"],
	"scripts": {
