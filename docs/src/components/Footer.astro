---
import { css } from '../../styled-system/css'
---

<footer
	class={css({
		borderTop: '1px solid var(--border-color)',
		backgroundColor: 'var(--bg-primary)',
		padding: '2rem 1.5rem',
		marginTop: 'auto',
		transition: 'background-color 0.3s, border-color 0.3s',
	})}
>
	<div
		class={css({
			maxWidth: '1200px',
			margin: '0 auto',
			display: 'flex',
			justifyContent: 'space-between',
			alignItems: 'center',
			flexWrap: 'wrap',
			gap: '1rem',
		})}
	>
		<div
			style={{
				color: 'var(--text-tertiary)',
				fontSize: '0.875rem',
			}}
		>
			&copy; {new Date().getFullYear()} @mdrv/wsx. MIT License.
		</div>

		<div class={css({ display: 'flex', gap: '1.5rem', fontSize: 'sm' })}>
			<a
				href='https://github.com/mdrv/wsx'
				target='_blank'
				rel='noopener noreferrer'
				class={css({
					_hover: { color: 'brand.600' },
				})}
				style={{
					color: 'var(--text-tertiary)',
				}}
			>
				GitHub
			</a>
			<a
				href='https://github.com/mdrv/wsx/issues'
				target='_blank'
				rel='noopener noreferrer'
				class={css({
					_hover: { color: 'brand.600' },
				})}
				style={{
					color: 'var(--text-tertiary)',
				}}
			>
				Issues
			</a>
			<a
				href='https://www.npmjs.com/package/@mdrv/wsx'
				target='_blank'
				rel='noopener noreferrer'
				class={css({
					_hover: { color: 'brand.600' },
				})}
				style={{
					color: 'var(--text-tertiary)',
				}}
			>
				npm
			</a>
		</div>
	</div>
</footer>
